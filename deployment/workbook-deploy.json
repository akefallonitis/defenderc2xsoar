{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workbookDisplayName": {
      "type": "string",
      "defaultValue": "DefenderC2 Command & Control Console",
      "metadata": {
        "description": "The friendly name for the workbook that will appear in Azure Monitor"
      }
    },
    "workbookSourceId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the Log Analytics workspace. Find this in Azure Portal > Log Analytics workspace > Properties > Resource ID"
      }
    },
    "workbookContent": {
      "type": "object",
      "metadata": {
        "description": "The workbook template content as a JSON object. Load this from DefenderC2-Workbook.json or FileOperations.workbook file."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the workbook resource"
      }
    }
  },
  "variables": {
    "workbookId": "[guid(parameters('workbookDisplayName'), resourceGroup().id)]"
  },
  "resources": [
    {
      "type": "microsoft.insights/workbooks",
      "name": "[variables('workbookId')]",
      "location": "[parameters('location')]",
      "apiVersion": "2021-03-08",
      "kind": "shared",
      "properties": {
        "displayName": "[parameters('workbookDisplayName')]",
        "serializedData": "[string(parameters('workbookContent'))]",
        "version": "1.0",
        "sourceId": "[parameters('workbookSourceId')]",
        "category": "sentinel"
      },
      "tags": {
        "DefenderC2": "true",
        "hidden-title": "[parameters('workbookDisplayName')]"
      }
    }
  ],
  "outputs": {
    "workbookId": {
      "type": "string",
      "value": "[variables('workbookId')]"
    },
    "workbookResourceId": {
      "type": "string",
      "value": "[resourceId('microsoft.insights/workbooks', variables('workbookId'))]"
    }
  }
}
